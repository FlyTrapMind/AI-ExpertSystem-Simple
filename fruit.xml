   <attribute>type</attribute>
   <text>What type is the produce</text>
   <response>potato</response>
   <response>banana</response>
  </question>
  <question>
   <attribute>colour</attribute>
   <text>What colour is the produce</text>
   <response>brown</response>
   <response>yellow</response>
   <response>green</response>
  </question>
 </questions>
</knowledgebase>
